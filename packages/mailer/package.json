{
  "name": "mailer",
  "type": "module",
  "version": "0.0.0",
  "description": "Ship Mailer based on React Email",
  "author": "Paralect",
  "license": "MIT",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "email dev --port 4000",
    "export": "email export",
    "tsc": "tsc --noEmit --watch",
    "prettier": "prettier . --write --config .prettierrc.json",
    "eslint": "eslint . --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@react-email/components": "1.0.1",
    "@react-email/render": "2.0.0",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.0.6",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "eslint-config": "workspace:*",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "prettier-config": "workspace:*",
    "react-email": "5.0.6",
    "tsconfig": "workspace:*",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --fix",
      "bash -c 'tsc --noEmit'",
      "prettier . --write"
    ],
    "*.{json,md}": [
      "prettier . --write"
    ]
  }
}
